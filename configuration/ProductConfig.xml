<?xml version="1.0"?>
<Configuration>

    <Crawlers>
        <Crawler id="FutureShop">
            <BaseURL>http://www.futureshop.ca</BaseURL>
            <ProductTitle>.prod-title</ProductTitle>
            <PriceWrapper>.prod-detail-bot</PriceWrapper>
            <ProductPrice>.prod-price</ProductPrice>
        </Crawler>
        <Crawler id="BestBuy">
            <BaseURL>http://www.bestbuy.ca</BaseURL>
            <ProductTitle>.product-title</ProductTitle>
            <PriceWrapper>.prod-detail-bot</PriceWrapper>
            <ProductPrice>.prodprice</ProductPrice>
        </Crawler>
    </Crawlers>

    <TrackedProducts>
        <!--Name is optional-->
        <!--ProductURL is the URL that takes you to the product page-->
        <!--MaxPrice refers to the maximum price that you are willing to pay for that product-->

        <Product>
            <Name>un55h6400afxzc</Name>
            <ProductURL>http://www.futureshop.ca/en-ca/product/samsung-samsung-55-1080p-120hz-3d-led-smart-tv-un55h6400afxzc-future-shop-exclusive-un55h6400afxzc/10289672.aspx</ProductURL>
            <MaxPrice>1300</MaxPrice>
        </Product>
        <Product>
            <Name>PlayStation 4 Console</Name>
            <ProductURL>http://www.futureshop.ca/en-CA/product/playstation-4-playstation-4-console-10036/10254140.aspx</ProductURL>
            <MaxPrice>450</MaxPrice>
        </Product>
        <Product>
            <Name>UN55H7150AFXZC</Name>
